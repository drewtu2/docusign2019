<script src="https://github.com/pipwerks/PDFObject/blob/master/pdfobject.min.js"></script>

<div class="row">
    <% @issues.each do |issue|%>
      <div class="col-sm">
      <div class="card" >

        <img class="card-img-top" src="/assets/<%= issue.attachment_link %>" alt="Card image cap">
        <div class="card-body">
          <% if @supported.include?(issue.id) %>
            <div class="ribbon ribbon-top-right"><span>Supporting!</span></div>
          <% end %>
          <!-- Title -->
          <h4 class="card-title"><%= issue.title %></h4>
          <hr>
          <!-- Text -->
          <p class="card-text"><%= issue.summary %></p>
          <div class="container">
            <div class="row">
              <div class="col">
                <div class="offer-points-text">
                  +<%= issue.supported %> Signed
                </div>
              </div>
              <div class="col">
                <a href="#!" class="black-text d-flex justify-content-end" data-toggle="modal" data-target="#portfolioModal<%= issue.id %>">Learn More</a>
              </div>
            </div>
          </div>
          <!-- Link -->
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <% @issues.each do |issue|%>

    <div class="portfolio-modal modal fade" id="portfolioModal<%= issue.id %>" tabindex="-1" role="dialog" aria-labelledby="portfolioModal<%= issue.id %>Label" aria-hidden="true">
      <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">
            <i class="fas fa-times"></i>
          </span>
            </button>

          <div class="modal-body text-center">
            <div class="container">
              <div class="row justify-content-center">
                <div class="col-lg-12">
                  <!-- Portfolio Modal - Title -->
                  <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0"><%= issue.title %></h2>
                  <!-- Icon Divider -->
                  <div class="divider-custom">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon">
                      <i class="fas fa-star"></i>
                    </div>
                    <div class="divider-custom-line"></div>
                  </div>
                  <!-- Portfolio Modal - Image -->
                  <img class="img-fluid rounded mb-5" src="/assets/<%= issue.attachment_link %>" alt="">
                  <!-- Portfolio Modal - Text -->
                  <p class="mb-lg-5"><%= issue.description.html_safe %></p>
                  <% if @supported.include?(issue.id) %>
                    <a class="btn btn-success" href="#" role="button">Donate !</a>
                  <% else %>
                    <a class="btn btn-success" href=<%= edit_advocacy_path(issue.id)%> role="button">I Care !</a>
                  <% end %>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <input type="hidden" id="thank_you" value="<%= @thank %>">

  <div class="modal fade" id="thankyoumodal" tabindex="-1" role="dialog" aria-labelledby="thankyoumodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
      <div class="modal-content">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin-top: 10px">
          <span aria-hidden="true">
            <i class="fas fa-times"></i>
          </span>
        </button>

        <div class="modal-body">
          <div class="jumbotron jumbotron-fluid">
            <div class="container">
              <p class="lead text-center">Thank you for supporting <b><%= @supporting_issue %>.</b></p>
              <hr>
              <p class="lead text-center">  A personal e-mail has been sent to <b><%= @sent_to %></b> on your behalf.</p>
              <hr>
              <p class="lead text-center">  You have made a valuable contribution to the cause of preserving nature !</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
